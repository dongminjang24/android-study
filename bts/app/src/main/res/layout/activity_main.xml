<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/bts_image_1"
            android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
            android:src="@drawable/bts_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
        <ImageView
            android:id="@+id/bts_image_2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bts_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/bts_image_3"
            android:src="@drawable/bts_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
            android:src="@drawable/bts_4"
            android:id="@+id/bts_image_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/bts_5"
            android:id="@+id/bts_image_5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/bts_6"
            android:id="@+id/bts_image_6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:contentDescription="@string/hide_bottom_view_on_scroll_behavior"
            android:src="@drawable/bts_7"
            android:id="@+id/bts_image_7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>